{
    "version": 3,
    "configurePresets": [
        {
            "name": "GCC_BASE",
            "displayName": "GCC_BASE",
            "description": "Default build arguments",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "toolchainFile": "${sourceDir}/toolchain/cmake/GCC.cmake"
        },
        {
            "name": "ARM_NONE_EABI_BASE",
            "displayName": "ARM_NONE_EABI_BASE",
            "description": "Default build arguments",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "toolchainFile": "${sourceDir}/toolchain/cmake/GNU_ARM_Embedded.cmake"
        },
        {
            "name": "windows",
            "displayName": "Port - windows",
            "description": "Building the exe file for windows",
            "inherits": "GCC_BASE",
            "cacheVariables": {
                "PORT": "windows",
                "CHARON_CONFIG": "windows"
            }
        },
        {
            "name": "stm32f4",
            "displayName": "Port - stm32f4",
            "description": "Building the elf file for stm32f4",
            "inherits": "ARM_NONE_EABI_BASE",
            "cacheVariables": {
                "PORT": "stm32f4",
                "CHARON_CONFIG": "F4Config"
            }
        },
        {
            "name": "standalone",
            "displayName": "Port - standalone",
            "description": "Building standalone charon library",
            "inherits": "GCC_BASE",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Generic",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_ASM_COMPILER": "gcc",
                "CMAKE_OBJDUMP": "objdump",
                "PORT": "standalone",
                "CHARON_CONFIG": "standalone"
            }
        }
       
    ]
}
